{
    "paths": {
        "css": "css/",
        "images": "images/",
        "js": "js/",
        "maps": "maps/",
        "icons": "images/icons.svg"
    },
    "sources": {
        "scss": "src/scss/**/*.scss",
        "images": "images/**/*.+(jpeg|jpg|png|gif|svg)",
        "js": "src/js/**/*.js",
        "icons": "src/icons/*.svg",
        "twig": "templates/**/*.html.twig"
    },
    "gulp": {
        "excludeTasks": []
    },
    "browserSync": {
        "enabled": true,
        "hostname": "localhost"
    },
    "drush": {
        "enabled": false,
        "watchDelay": 5000
    },
    "icons": {
        "enabled": true,
        "watch": true
    },
    "fonts": {
        "enabled": false,
        "watch": false
    },
    "fontAwesome": {
        "enabled": true
    },
    "kbox": {
        "enabled": true
    },
    "modernizr": {
        "enabled": true,
        "options": {
            "tests": [],
            "excludeTests": []
        }
    },
    "sass": {
        "enabled": true,
        "watch": true
    },
    "sassImages": {
        "enabled": true,
        "watch": true
    },
    "scripts": {
        "enabled": true,
        "watch": true
    },
    "twig": {
        "enabled": true,
        "watch": true,
        "useCache": true
    }
}
