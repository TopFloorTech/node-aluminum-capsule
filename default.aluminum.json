{
    "paths": {
        "baseComponents": "base-components",
        "dist": {
            "dir": "dist",
            "css": "css",
            "js": "js",
            "fonts": "fonts",
            "icons": "icons"
        },
        "src": {
            "dir": "src",
            "fonts": "fonts",
            "icons": "icons",
            "js": "js",
            "scss": "scss"
        },
        "images": "images",

        "icons": "images/icons",
        "generatedScss": "src/scss/generated",
        "fontsCss": "src/scss/fonts",
        "iconsCss": "src/scss/icons"
    },
    "images": {
        "loadImages": true,
        "imageminEnabled": false
    },
    "sources": {
        "scss": ["src/scss/**/*.scss", "components/*/scss/**/*.scss"],
        "images": "images/**/*.+(jpeg|jpg|png|gif|svg)",
        "fonts": "src/fonts/*.{ttf,otf}",
        "js": ["src/js/**/*.js", "components/*/js/**/*.js"],
        "icons": "src/icons",
        "iconFiles": "*.svg",
        "twig": ["templates/**/*.html.twig", "components/*/templates/**/*.html.twig"]
    },
    "assets": {},
    "browserSync": {
        "enabled": false,
        "hostname": "localhost",
        "port": 80,
        "openAutomatically": false,
        "reloadDelay": 50,
        "injectChanges": true
    },
    "drush": {
        "enabled": false,
        "watchDelay": 50,
        "alias": {
            "cc": "drush cc css-js",
            "cr": "drush cr",
            "cex": "drush cex -y",
            "cim": "drush cim -y"
        }
    },
    "icons": {
        "enabled": false,
        "watch": true,
        "destination": "./",
        "cssExt": ".scss",
        "maxWidth": 32,
        "maxHeight": 32,
        "padding": 5,
        "layout": "diagonal",
        "cacheBust": false,
        "scssTemplate": false
    },
    "fonts": {
        "enabled": false,
        "watch": true
    },
    "fontAwesome": {
        "enabled": false,
        "src": "",
        "cssFile": "_font-awesome.scss"
    },
    "lando": {
        "enabled": false
    },
    "modernizr": {
        "enabled": false,
        "options": {
            "tests": [],
            "excludeTests": []
        },
        "sources": [
            "./src/js/**/*.js",
            "./components/*/js/**.*.js",
            "./src/scss/**/*.scss",
            "./components/*/scss/**/*.scss",
            "./js/**/*.js",
            "!./js/modernizr.js"
        ]
    },
    "sass": {
        "httpPrefix": "",
        "assetsPattern": "{css,fonts,images}/**/*",
        "enabled": true,

        "watch": true,
        "browsers": false,
        "includePaths": [
            "./css"
        ]
    },
    "scripts": {
        "enabled": true,
        "watch": true
    },
    "twig": {
        "enabled": false,
        "watch": true,
        "useCache": true
    },
    "gulp": {
        "includeTasks": [
            "drush",
            "font-awesome",
            "fonts",
            "icons",
            "sass",
            "scripts",
            "modernizr",
            "assets",
            "browser-sync",
            "build",
            "watch",
            "default"
        ],
        "excludeTasks": []
    }
}
